<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAssignment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="149dp"
        android:layout_marginLeft="51dp"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/black"
        android:padding="5dp"
        android:text="Assignment 1"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnAssignment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnAssignment1"
        android:layout_marginEnd="25dp"
        android:text="Assignment 2"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@android:color/black"
        android:padding="5dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnAssignment3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="213dp"
        android:text="Assignment 3"
        android:background="@android:color/black"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>